<!DOCTYPE html>
<html lang="en">
  <%- include('layouts/head'); -%>
  <body>
    <%- include('layouts/header'); -%>

    <main>
      <div class="form-container">
        <h2>Test already booked</h2>

        <section>
          <h3>Booking Summary</h3>
          <p><strong>Test Type:</strong> <%= user?.TestType || '—' %></p>
          <p><strong>Date:</strong> <%= user?.appointment?.date || '—' %></p>
          <p><strong>Time:</strong> <%= user?.appointment?.time || '—' %></p>
        </section>

        <section>
          <h3>Personal Information</h3>
          <p><strong>Name:</strong> <%= user?.firstName %> <%= user?.lastName %></p>
          <p><strong>Username:</strong> <%= user?.username %></p>
          <p><strong>License #:</strong> <%= user?.licenseNumber || '—' %></p>
          <p><strong>Age:</strong> <%= user?.age || '—' %></p>
          <p><strong>Experienced (5+ yrs):</strong> <%= (user?.experience || 'no').toString().toUpperCase() %></p>
        </section>

        <section>
          <h3>Car Details</h3>
          <p><strong>Make:</strong> <%= user?.carDetails?.make || '—' %></p>
          <p><strong>Model:</strong> <%= user?.carDetails?.model || '—' %></p>
          <p><strong>Year:</strong> <%= user?.carDetails?.year || '—' %></p>
          <p><strong>Plate #:</strong> <%= user?.carDetails?.plateno || '—' %></p>
        </section>

        
      </div>
    </main>

    <%- include('layouts/footer'); -%>
  </body>
</html>
