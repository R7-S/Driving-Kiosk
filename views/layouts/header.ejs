<header>
  <div class="container">
    <h1>Book DriveTest</h1>
    <nav>
      <ul>
        <!-- Role-aware dashboard link -->
        <li><a href="<%= DashboardURL %>"><%= DashboardLabel || 'Dashboard' %></a></li>

       <% const role = (UserType || '').toLowerCase(); %>

        <% if (UserId && role === 'driver') { %>
          <!-- Hide G2 if a G test is already booked -->
          <% if (!HasGBooking) { %>
            <li><a href="/g2_test">G2 Test</a></li>
          <% } %>
          <!-- G Test (session-based; no id/username in URL) -->
          <li><a href="/g_test">G Test</a></li>
        <% } %>

        <% if (!UserId) { %>
          <li><a href="/login">Login</a></li>
          <li><a href="/register">Register</a></li>
        <% } else { %>
          <li><a href="/logout">Logout</a></li>
          <% if (showDeleteLink) { %>
            <li><a href="/account/delete">Delete account</a></li>
          <% } %>
        <% } %>
      </ul>
    </nav>
  </div>
</header>
